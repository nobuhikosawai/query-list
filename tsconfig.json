{
  "compilerOptions": {
    "target": "ES2015",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "isolatedModules": true,
    "jsx": "react",
    "outDir": "./dist/",
    "rootDir": "./src/",
    "sourceMap": true
  },
  "exclude": [
    "example"
  ]
}
